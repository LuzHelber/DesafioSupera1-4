package br.com.helber;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.Scanner;

public class OrdenacaoParesImpares {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int N = scanner.nextInt(); // Ler o valor de N

        List<Integer> pares = new ArrayList<>(); // Lista para os números pares
        List<Integer> impares = new ArrayList<>(); // Lista para os números ímpares

        // Ler os números e separá-los em pares e ímpares
        for (int i = 0; i < N; i++) {
            int numero = scanner.nextInt();
            if (numero % 2 == 0) {
                pares.add(numero);
            } else {
                impares.add(numero);
            }
        }

        // Ordenar as listas
        Collections.sort(pares); // Ordenar os pares em ordem crescente
        Collections.sort(impares, Comparator.reverseOrder()); // Ordenar os ímpares em ordem decrescente

        // Imprimir os números pares
        for (int par : pares) {
            System.out.println(par);
        }

        // Imprimir os números ímpares
        for (int impar : impares) {
            System.out.println(impar);
        }

        scanner.close();
    }
}
